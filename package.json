{
  "name": "salina-desktop",
  "productName": "Salina Desktop",
  "version": "1.0.0",
  "description": "Salina Desktop - Local-First Unified UI Platform with Electron, React, TypeScript, and DDD Architecture",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @salina/desktop dev",
    "start": "pnpm --filter @salina/desktop start",
    "build": "pnpm -r build",
    "package": "pnpm --filter @salina/desktop package",
    "make": "pnpm --filter @salina/desktop make",
    "publish": "pnpm --filter @salina/desktop publish",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:ui": "pnpm -r test:ui",
    "test:coverage": "pnpm -r test:coverage",
    "test:e2e": "pnpm --filter @salina/desktop test:e2e",
    "test:e2e:ui": "pnpm --filter @salina/desktop test:e2e:ui",
    "test:e2e:headed": "pnpm --filter @salina/desktop test:e2e:headed",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "clean:build": "pnpm -r clean:build"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "local-first",
    "desktop-app",
    "monorepo",
    "ddd",
    "mvvm",
    "salina"
  ],
  "author": {
    "name": "Salina Team"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
