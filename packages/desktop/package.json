{
  "name": "@salina/desktop",
  "version": "1.0.0",
  "description": "Salina Desktop Electron Application",
  "private": true,
  "main": ".vite/build/main.js",
  "type": "module",
  "scripts": {
    "dev": "electron-forge start",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "build": "tsc && electron-forge make",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "routes:generate": "tsr generate",
    "routes:watch": "tsr watch",
    "clean": "rm -rf .vite out dist",
    "clean:build": "rm -rf .vite out",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "rebuild": "electron-rebuild"
  },
  "dependencies": {
    "@salina/shared": "workspace:*",
    "@salina/ui": "workspace:*",
    "@salina/domains-notes": "workspace:*",
    "@salina/domains-files": "workspace:*",
    "@salina/domains-transcriptions": "workspace:*",
    "@salina/domains-search": "workspace:*",
    "@salina/domains-home": "workspace:*",
    "@salina/infrastructure": "workspace:*",
    "@tanstack/react-query": "^5.90.6",
    "@tanstack/react-router": "^1.134.12",
    "@tanstack/router-devtools": "^1.134.12",
    "electron-squirrel-startup": "^1.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/plugin-vite": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^3.7.2",
    "@playwright/test": "^1.56.1",
    "@tanstack/router-cli": "^1.134.12",
    "@tanstack/router-vite-plugin": "^1.134.12",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react-swc": "^4.2.0",
    "@rollup/plugin-babel": "^6.1.0",
    "@tailwindcss/vite": "^4.1.16",
    "babel-plugin-react-compiler": "^1.0.0",
    "electron": "^39.0.0",
    "electron-rebuild": "^3.2.9",
    "playwright": "^1.56.1",
    "vite": "npm:rolldown-vite@latest"
  }
}
